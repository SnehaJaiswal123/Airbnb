<%- include('../partials/head') %>
  <!-- Tailwind CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gradient-to-br from-blue-100 via-white to-blue-200 min-h-screen">
    <%- include('../partials/headers') %>
    <h1 class="text-4xl font-bold text-center mt-10 mb-8 text-blue-700">Your Favourites</h1>
    <ul class="max-w-3xl mx-auto space-y-6">
      <% favouriteHomes.forEach((home)=>{ %>
        <li class="bg-white rounded-lg shadow-md p-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4 border border-blue-100">
          <div class="flex flex-col md:flex-row md:items-center gap-6 w-full">
            <img src="<%= home.photo_url || 'https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg' %>" alt="Home Image" class="w-full md:w-40 h-32 object-cover rounded-md shadow mb-4 md:mb-0">
            <div class="flex-1">
              <div class="text-xl font-semibold text-gray-800 mb-1"><%= home.houseName %></div>
              <div class="flex flex-wrap gap-4 mb-2">
                <span class="text-lg text-green-600 font-bold">₹ <%= home.price %></span>
                <span class="text-yellow-500 font-semibold">★ <%= home.ratings %></span>
                <span class="text-gray-700"><%= home.location %></span>
              </div>
            </div>
          </div>
          <div class="flex flex-col gap-2 md:items-end mt-4 md:mt-0">
            <%- include('../partials/remFav',{homeId:home._id}) %>
          </div>
        </li>
      <% }) %>
    </ul>
  </body>
</html>