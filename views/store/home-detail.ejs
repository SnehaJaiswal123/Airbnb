<%- include('../partials/head') %>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gradient-to-br from-blue-100 via-white to-blue-200 min-h-screen">
    <%- include('../partials/headers') %>
    <div class="max-w-3xl mx-auto mt-10 bg-white rounded-2xl shadow-2xl p-10 border border-blue-100">
      <h1 class="text-4xl font-bold text-center mb-8 text-blue-700">Home Details</h1>
      <img src="<%= home.photo_url%>" alt="Home Image" class="w-full h-72 object-cover rounded-lg mb-6 shadow">
      <div class="text-2xl font-semibold text-gray-800 mb-2"><%= home.houseName %></div>
      <div class="text-lg text-green-600 font-bold mb-2">₹ <%= home.price %></div>
      <div class="flex items-center gap-2 mb-2">
        <span class="text-yellow-500 text-xl">★</span>
        <span class="text-gray-700"><%= home.rating %></span>
      </div>
      <div class="text-gray-500 mb-2"><%= home.location %></div>
      <div class="text-gray-700 mb-4"><%= home.description %></div>
      <% if(usertype=='guest'){ %>
        <div class="mt-6">
          <%- include('../partials/favourite') %>
        </div>
      <% } %>
    </div>
  </body>
</html>