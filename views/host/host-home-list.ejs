<%- include('../partials/head') %>
  <!-- Tailwind CDN -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gradient-to-br from-blue-100 via-white to-blue-200 min-h-screen">
    <%- include('../partials/headers') %>
    <h1 class="text-4xl font-bold text-center mt-10 mb-8 text-blue-700">Your Homes</h1>
    <ul class="max-w-3xl mx-auto space-y-6">
      <% homes.forEach((home)=>{ %>
        <li class="bg-white rounded-lg shadow-md p-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4 border border-blue-100">
          <div class="flex flex-col md:flex-row md:items-center gap-6 w-full">
            <img src="https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg" alt="image" class="w-full md:w-40 h-32 object-cover rounded-md shadow mb-4 md:mb-0">
            <div class="flex-1">
              <div class="text-xl font-semibold text-gray-800 mb-1"><%= home.houseName %></div>
              <div class="flex flex-wrap gap-4 mb-2">
                <span class="text-lg text-green-600 font-bold">₹ <%= home.price %></span>
                <span class="text-yellow-500 font-semibold">★ <%= home.rating %></span>
                <span class="text-gray-700"><%= home.location %></span>
              </div>
              <div class="text-gray-700 mb-2"><%= home.description %></div>
            </div>
          </div>
          <div class="flex flex-col gap-2 md:items-end">
            <a href="/host/edit-home/<%= home._id %>" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-medium text-center">Edit</a>
            <form action="/host/delete-home/<%= home._id %>" method="post">
              <button type="submit" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 font-medium w-full">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </body>
</html>